<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="cn.com.git.leon.spring.springLifeStyle"/>

    <bean id="student" class="cn.com.git.leon.spring.Student">
        <property name="name" value="sirius"/>
    </bean>

    <bean id="aspectTest" class="cn.com.git.leon.spring.AspectTest"/>

    <aop:config proxy-target-class="true">
        <aop:aspect id="aspect" ref="aspectTest">
            <aop:pointcut id="allMethod" expression="execution(* cn.com.git.leon.spring.Student.*())" />
            <aop:before method="showTime" pointcut-ref="allMethod" />
            <aop:after method="showTime" pointcut-ref="allMethod" />
        </aop:aspect>
    </aop:config>
</beans>